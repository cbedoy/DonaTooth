<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/common_elevation"
        android:layout_margin="@dimen/half_margin"
        app:cardCornerRadius="@dimen/small_margin"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/doctor_avatar_size"
                android:layout_height="@dimen/doctor_avatar_size"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-black"
                android:text="Dra. Vanessa Donato"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avatar"
                app:layout_constraintTop_toTopOf="@+id/avatar" />

            <TextView
                android:id="@+id/speciality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Pediatric dentist"
                app:layout_constraintEnd_toEndOf="@+id/name"
                app:layout_constraintStart_toStartOf="@+id/name"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <LinearLayout
                android:id="@+id/schedules"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/speciality"
                app:layout_constraintStart_toStartOf="@+id/speciality"
                app:layout_constraintTop_toBottomOf="@+id/speciality">


                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/micro_margin"
                    android:background="@drawable/rounded_corners_accent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="@dimen/micro_margin"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    android:text="10 am"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/micro_margin"
                    android:fontFamily="sans-serif-light"
                    android:padding="@dimen/micro_margin"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    android:text="12 pm" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/micro_margin"
                    android:fontFamily="sans-serif-light"
                    android:padding="@dimen/micro_margin"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    android:text="2 pm" />


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>